{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TranscribeJS",
  "version": "0.4.3",
  "identifier": "com.joeshep.transcribejs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "TranscribeJS",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data: filesystem: tauri:; media-src 'self' blob: data: filesystem: tauri:; connect-src 'self' blob: data: tauri: https://api.mistral.ai https://api.deepl.com https://api-free.deepl.com"
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
